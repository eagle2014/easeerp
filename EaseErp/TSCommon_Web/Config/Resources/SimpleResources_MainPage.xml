<?xml version="1.0" encoding="utf-8" ?>
<root>
  <!--默认的登录页面-->
  <resource name="DefaultPageName">Login.aspx</resource>
  <resource name="LOGIN.SUCCESS.PAGE">LoginSuccess.aspx</resource>

  <!--默认的单点登录页面-->
  <resource name="DefaultPageNameSSL">Spec_LoginBySSO.aspx</resource>

  <!--主页面相关配置-->
  <!--页眉-->
  <resource name="MAIN_PAGE.HEADER_PAGE">Spec_MainPage/Top.aspx</resource>
  <!--首页_服务台和服务支持-->
  <resource name="MAIN_PAGE.FIRST_PAGE">TS_MainPage/FirstPage.aspx</resource>
  <resource name="MAIN_PAGE.FIRST_PAGE_TABID">firstPagePanel</resource>
  <resource name="MAIN_PAGE.FIRST_PAGE_TABTITLE">首页</resource>

  <!--页脚-->
  <resource name="MAIN_PAGE.FOOTER_PAGE">TS_MainPage/Footer.aspx</resource>
  <!--搜索页-->
  <resource name="MAIN_PAGE.SEARCH_PAGE">TS_Search/SearchDlg.aspx</resource>
  <!--是否显示搜索页-->
  <resource name="MAIN_PAGE.SHOW_SEARCH_PAGE">false</resource>
  <!--是否使用遮罩提示框效果-->
  <resource name="MAIN_PAGE.SHOW_MASK_MSG">true</resource>

  <!--系统内建信息-->
  <!--系统全称-->
  <resource name="SYSTEM.TITLE">EasyERP</resource>
  <!--系统简称-->
  <resource name="SYSTEM.SHORT.TITLE">EasyERP</resource>
  <!--系统版本号-->
  <resource name="SYSTEM.VERSION.NO">V1.0</resource>

  <!--系统登录后是否最大化浏览窗口-->
  <resource name="SYSTEM.LOGIN.FULLWINDOW">false</resource>
  <!--系统是否处于调试状态-->
  <resource name="SYSTEM.DEBUG">true</resource>

  <!--系统是否使用多窗口主页-->
  <resource name="SYSTEM.WINDOW.ISMDI">true</resource>

  <!--系统最多同时打开的窗口数量-->
  <resource name="SYSTEM.WINDOW.MAX_COUNT">10</resource>
  <!--系统同时打开的窗口数量超过最大限制时的提示信息-->
  <resource name="SYSTEM.WINDOW.MAX_MSG">系统最多允许同时打开10个窗口,请先关闭一些窗口后再重新执行你的操作！</resource>
</root>
